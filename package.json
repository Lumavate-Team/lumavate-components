{
  "name": "@lumavate/components",
  "version": "0.1.0",
  "description": "Lumavate Component Library",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "module": "dist/esm/index.js",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/",
    "src/assets",
    "components.json"
  ],
  "scripts": {
    "build": "stencil build",
    "docs": "stencil build --docs readme.md",
    "docs.json": "stencil build --docs-json docs.json",
    "postbuild": "sh postbuild.sh",
    "dev": "stencil build --dev --watch --serve",
    "serve": "stencil-dev-server",
    "start": "npm run dev",
    "test": "jest --no-cache",
    "test.watch": "jest --watch --no-cache"
  },
  "dependencies": {
    "@stencil/core": "^0.14.2",
    "@stencil/sass": "0.1.1",
    "hammerjs": "^2.0.8",
    "pinch-zoom-js": "^2.2.0",
    "stencil": "0.0.5"
  },
  "devDependencies": {
    "@stencil/postcss": "0.1.0",
    "@types/jest": "^23.1.3",
    "autoprefixer": "^8.6.4",
    "jest": "^23.2.0",
    "workbox-build": "3.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lumavate-team/lumavate-components.git"
  },
  "author": "Lumavate Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lumavate-team/lumavate-components"
  },
  "homepage": "https://github.com/lumavate-team/lumavate-components",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  },
  "keywords": [
    "lumavate",
    "components"
  ]
}
